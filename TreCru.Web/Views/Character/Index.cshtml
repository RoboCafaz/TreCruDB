@model IEnumerable<TreCru.Web.Entity.Character>
<h2>@(ViewBag.Title)</h2>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Class</th>
            <th>Rarity</th>
            <th>Cost</th>
            <th>Max Level</th>
            <th>Experience</th>
            <th>Max HP</th>
            <th>Max Attack</th>
            <th>Max Recovery</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var character in Model)
        {
            <tr>
                <td>@(character.Id)</td>
                <td>@(character.Name)</td>
                <td>@(character.Desc)</td>
                <td>@(character.Type)</td>
                <td>@(character.Class)</td>
                <td>@(character.Rarity)</td>
                <td>@(character.Cost)</td>
                <td>@(character.MaxLevel)</td>
                <td>@(character.MaxExp)</td>
                <td>@(character.MaxHp)</td>
                <td>@(character.MaxAtk)</td>
                <td>@(character.MaxRcv)</td>
            </tr>
        }
    </tbody>
</table>